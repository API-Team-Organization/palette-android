<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.main.settings.ChangePasswordFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="100dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호 변경"
                android:textSize="27sp"
                android:fontFamily="@font/pretendard_extrabold"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이전 비밀번호를 잊으셨다면? 그냥 죽으세요ㅋ"
                android:fontFamily="@font/pretendard_bold"
                android:textSize="15sp"
                android:textColor="@color/darkGray"
                android:layout_marginTop="3dp"
                android:layout_marginStart="1dp"/>

            <EditText
                android:id="@+id/beforePassword"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/bac_auth"
                android:hint="현재 비밀번호"
                android:fontFamily="@font/suit_semibold"
                android:textColor="@color/black"
                android:textColorHint="@color/semiDarkGray"
                android:layout_marginTop="40dp"
                android:inputType="textPassword"
                android:paddingStart="10dp"/>

            <EditText
                android:id="@+id/afterPassword"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/bac_auth"
                android:hint="변경할 비밀번호"
                android:fontFamily="@font/suit_semibold"
                android:textColor="@color/black"
                android:textColorHint="@color/semiDarkGray"
                android:layout_marginTop="20dp"
                android:inputType="textPassword"
                android:paddingStart="10dp"/>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/changePasswordBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="50dp"
            android:text="변경하기"
            android:textSize="16sp"
            android:fontFamily="@font/pretendard_semibold"
            android:textColor="@color/white"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/bac_button"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>