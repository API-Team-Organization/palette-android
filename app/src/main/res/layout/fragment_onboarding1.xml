<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.onboarding.Onboarding1Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="24dp"
        android:orientation="vertical"
        android:weightSum="10">


        <ImageView
            android:id="@+id/onBoarding1Animation"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/onboarding1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_weight="8"/>


        <LinearLayout
            android:id="@+id/onBoarding1TextBox"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="2"
            android:layout_marginBottom="120dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AI 홍보물 제작 앱"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:fontFamily="@font/pretendard_bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="최신 AI 기술로 당신의 아이디어를"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/pretendard_medium"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 현실로 만들어보세요!"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/pretendard_medium"/>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>